@model EFDbFirstApproachExample.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(t => t.UserName)
            @Html.TextBoxFor(t => t.UserName, new { placeholder = "Username", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.UserName)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(t => t.Password)
            @Html.TextBoxFor(t => t.Password, new { placeholder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Password)
        </div>
     

    </div>
    @Html.ValidationSummary()
    <button class="btn alert-info" type="submit" name="Login"> Login</button>
}

